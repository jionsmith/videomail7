<tr>
  <td><%= image_tag video.screenshot, style: "max-height: 100px;" %></td>
  <td><%= video.title %></td>
  <td><%= video_status(video) %></td>
  <td><%= "#{video.width}x#{video.height}" %></td>
  <td><%= video.created_at %></td>
  <td><%= number_to_human_size(video.file_size) %></td>
  <td>
    <div class="btn-group">
      <%= link_to preview_admin_video_path(video), class: "btn btn-primary", title: "Preview", target: "_blank" do %>
        <span class="glyphicon glyphicon-eye-open"></span>
      <% end %>

      <%= link_to edit_admin_video_path(video), class: "btn btn-info" do %>
        <span class="glyphicon glyphicon-edit"></span>
      <% end %>

      <%= link_to admin_video_path(video), method: :delete, class: "btn btn-danger", data:{ confirm: "Are you sure to delete?" } do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    </div>
  </td>
</tr>
