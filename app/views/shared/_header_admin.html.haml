.navbar.navbar-fixed-top.navbar-inverse{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"}
        = image_tag 'logo.png', class: 'img-responsive', width: '150'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{:class => filter_links_class(/\/templates/)}
          = link_to "Templates", admin_templates_path
        %li{:class => filter_links_class(/\/videos/)}
          = link_to "Videos", admin_videos_path
        %li{:class => filter_links_class(/\/packages/)}
          = link_to "Packages", admin_packages_path
        %li{:class => filter_links_class(/\/categories/)}
          = link_to "Categories", admin_categories_path
        %li{:class => filter_links_class(/\/products/)}
          = link_to "Products", admin_products_path
        %li{:class => filter_links_class(/\/settings/)}
          = link_to "Settings", admin_settings_path

      %p.navbar-text.navbar-right
        = link_to "Sign out", destroy_account_session_path, :method => 'delete'
      %p.navbar-text.navbar-right
        Signed in as
        %a.navbar-link{:href => "#"}
          = current_account.full_name
